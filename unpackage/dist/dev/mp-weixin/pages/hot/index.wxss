
.hot-page-box{
	padding-bottom: 50rpx;
}
.v-card-body{
	position: relative;
}
.v-card-body .play-bt{
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: 100;
	top: 0;
	left: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: rgba(0,0,0, .1);
}
.v-card-body .play-bt .icon{
	color: #ddd;
	opacity: .7;
}

